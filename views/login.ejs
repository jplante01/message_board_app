<article>
  <header>
    <a href="#close" aria-label="Close" class="close"></a>
    Enter your username and password to login
  </header>
  <form action="/log-in" method="POST">
    <input
      type="text"
      name="username"
      id="username"
      placeholder="username"
      required
    />
    <input
      type="password"
      name="password"
      id="password"
      placeholder="password"
      required
    />
    <button type="submit">Login</button>
  </form>
</article>
