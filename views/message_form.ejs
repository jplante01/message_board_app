<!doctype html>
<html>
  <head>
    <title>Create Message</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        text-align: center;
        padding: 50px;
      }
      h1 {
        color: #333333;
      }
      form {
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      label {
        margin-bottom: 10px;
      }
      input {
        margin-bottom: 20px;
        padding: 5px;
        width: 200px;
      }
      button {
        padding: 10px 20px;
        background-color: #333333;
        color: #ffffff;
        border: none;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <h1>Create Message</h1>
    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
    <div class="error">
      <% errors.forEach(function(error) { %>
      <p><%= error.msg %></p>
      <% }); %>
    </div>
    <% } %>
    <form action="/messages/create" method="POST">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" value="<%= typeof title != 'undefined' ? title : '' %>">

      <label for="content">Content:</label>
      <textarea id="content" name="content" rows="4" cols="50"><%= typeof content != 'undefined' ? content : '' %></textarea>

      <button type="submit">Create Message</button>
    </form>
  </body>
</html>
