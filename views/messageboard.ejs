<div class="grid">
  <section>
    <% if (user) { %>
      <a href="/messages/create" role="button">Post to the MessageBoard!</a>
    <% } else { %>
      <h3>Login to write to the messageboard!</h3>
    <% } %>
    <% if (typeof messages === 'undefined' || messages.length === 0) { %>
    <h2>No messages to display</h2>
    <% } else { %>
    <% messages.forEach(function(message) { %>    
    <article>
      <hgroup>
        <h2><%= message.title %></h2>
        <h3> <%= message.content %> </h3>
      </hgroup>
      <div style="display: grid; grid-template-columns: auto 1fr auto">
        <div style="display: inline-block"><cite><%= message.user.username %></cite></div>
        <div style="display: inline-block"></div>
        <div style="display: inline-block"><%= message.formatted_timestamp %></div>
      </div>
    </article>
    <% }); %>
    <% } %>
  </section>
</div>
