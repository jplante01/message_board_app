<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mockup</title>
    <!-- <link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css"
    /> -->
    <link rel="stylesheet" href="/stylesheets/pico.min.css" />
    <link rel="stylesheet" href="/stylesheets/custom.styles.css" />
  </head>
  <body>
    <nav class="container-fluid">
      <ul>
        <li>
          <h3>
            <a href="/messages"><strong>MessageBoard</strong></a>
          </h3>
        </li>
      </ul>
      <% if (user) { %>
      <ul>
        <li><a class="responsive-link" href="/log-out">Log out</a></li>
        <% if (user.admin === true) { %>
        <li><a href="/messages/admin">dashboard</a></li>
        <% } %>
        <li>
          <a class="icon" href="/log-out">
            <svg
              viewBox="0 0 24 24"
              width="24"
              height="24"
              stroke="currentColor"
              stroke-width="2"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="css-i6dzq1"
            >
              <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
              <polyline points="16 17 21 12 16 7"></polyline>
              <line x1="21" y1="12" x2="9" y2="12"></line>
            </svg>
          </a>
        </li>
      </ul>
      <% } else { %>
      <ul>
        <li><a href="/users/signup">Sign up</a></li>
      </ul>
      <% } %>
    </nav>
    <main class="container">
      <!-- <% %> - No output tag
      <%= %> - Outputs HTML value
      <%- %> - Outputs unescaped -->
      <!-- <% if (user) { %>
    <% } else { %>
    <% } %> -->
      <% if (pageContent === 'messageboard') {%> <%- include('messageboard') %>
      <% } else if (pageContent === 'login') {%> <%- include('login') %> <% }
      else if (pageContent === 'signup') {%> <%- include('create_user_form') %>
      <% } else if (pageContent === 'createMessage') {%> <%-
      include('create_message_form') %> <% } else if (pageContent ===
      'userCreateSuccess') {%> <%- include('user_create_success') %> <% } else
      if (pageContent === 'messageCreateSuccess') {%> <%-
      include('message_create_success') %> <% } else if (pageContent ===
      'dashboard') {%> <%- include('dashboard') %> <% } else if (pageContent ===
      'error') {%> <%- include('error') %> <% } %>
    </main>
    <!-- MODAL -->
    <dialog id="modal">
      <article>
        <header>
          <button
            aria-label="Close"
            rel="prev"
            onclick="toggleModal(event)"
          ></button>
          <p>
            <strong>Are you sure you want to delete this message?</strong>
          </p>
        </header>
        <!-- <h3 id="modal-message-title">Message title</h3>
        <p id="modal-message-content">Message Content</p> -->
        <footer>
          <a id="modal-link" href="">
            <button>Confirm</button>
          </a>
        </footer>
      </article>
    </dialog>
    <!-- MODAL -->
    <script src="/js/modal.js"></script>
  </body>
</html>
